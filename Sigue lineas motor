// Pines de los sensores
const int SENSOR_LEFT = 14;
const int SENSOR_RIGHT = 27;

void setup() {
  Serial.begin(115200);          // Inicializa comunicaci√≥n serie
  pinMode(SENSOR_LEFT, INPUT);   // Configura pin 14 como entrada
  pinMode(SENSOR_RIGHT, INPUT);  // Configura pin 27 como entrada
}

void loop() {
  int leftValue = digitalRead(SENSOR_LEFT);   // Lee sensor izquierdo
  int rightValue = digitalRead(SENSOR_RIGHT); // Lee sensor derecho

  // Imprime valores en el monitor serie
  Serial.print("Sensor Izq: ");
  Serial.print(leftValue);
  Serial.print(" | Sensor Der: ");
  Serial.println(rightValue);

  delay(500); // Espera medio segundo antes de la siguiente lectura
}
