#include <Wire.h>
#include <VL53L0X.h>

VL53L0X sensor;

#define MOTOR_PIN 5 // PWM para motor
int velocidad = 0;  // variable para velocidad

const int IN1 = 8;
const int IN2 = 9;
const int IN3 = 10;
const int IN4 = 11;
#define ENA 22
#define ENB 23


void setup() {
  Serial.begin(9600);
  Wire.begin();

  pinMode(IN1, OUTPUT);
  pinMode(IN2, OUTPUT);
  pinMode(IN3, OUTPUT);
  pinMode(IN4, OUTPUT);
  pinMode(ENA, OUTPUT);
  pinMode(ENB, OUTPUT);

  // VL53L0X
  sensor.init();
  sensor.startContinuous(0); // continuo

  // Motor
  pinMode(MOTOR_PIN, OUTPUT);
}

void loop() {
  int distancia = sensor.readRangeContinuousMillimeters();

  // Ver si la lectura es v√°lida
  if(sensor.timeoutOccurred() == false) {
    Serial.print("Distancia: ");
    Serial.println(distancia);

    // rango ejemplo: 50mm a 500mm
    distancia = constrain(distancia, 50, 500); //constrain(x, a, b) = x = valor original, a = min, b = max, si x se sale corrige
    velocidad = map(distancia, 50, 500, 0, 255);
    //map(x, in_min, in_max, out_min, out_max), funciona como un cambio de escala
    //pasara una distancia aproximada a un valor de velocidad

    digitalWrite(IN1, HIGH);
    digitalWrite(IN2, LOW);
    digitalWrite(IN3, HIGH);
    digitalWrite(IN4, LOW);
    analogWrite(ENA, velocidad);
    analogWrite(ENB, velocidad);

    Serial.print("Velocidad: ");
    Serial.println(velocidad);

    delay(2000);
  }
}
